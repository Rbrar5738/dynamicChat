<!DOCTYPE html>
<html>
<head>
 
<%- include("partial/head"); -%>
</head>
<body>
  <%- include("partial/nav"); -%>

    <div id="mainContainer">
      <div id="side">
        <ul>
          <li><a href="#">Home</a></li>
          <li><a href="#">Chat</a></li>
          
        </ul>
      </div>
      <div id="main">
        <h1>Welcome,
          <% if(locals.user) {%>
            <%= user.name %>
            <%}%>
          </h1>
          <div class="row">
              <div class="col-md-3">
                <ul class="list-group">
                  <% if(users.length > 0){
                    for(let i=0; i < users.length ; i++)
                    {
                  %>
                      <li class="list-group-item list-group-item-dark cursor-pointer user-list">
                        <img src="<%= users[i].image %>" height="50px" width="50px">
                          <%= users[i].name %>
                        </li>
                  <% } %>
                      <% } %>
                  </ul>
              </div>

              <div class="col-md-9">
                <h3 class="start-head" >Click on user to start a new chat</h3>
                <div class="chat-section">
                  <div class="chat-container"></div>  

                  <form action="" id="chat-form">
                    <input type="text" name="message" class="chat-input" placeholder="Enter message" required>
                      <input type="submit" value="Send Message" class="btn btn-primary">
                    </form>
                </div>
                
              </div>
            </div>
          </div>
         
      </div>
    </div>
    <script>
      
  let socket=io();
  $(document).ready(function(){
    $(".list-group").click(function(){
      $(".start-head").hide();
      $(".chat-section").show();
    });
  });

  </script>




</body>
</html>